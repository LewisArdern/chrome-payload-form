{
  "manifest_version": 2,

  "name": "Google Security Monitor",
  "description": "Google Drive Local Storage",
  "version": "1.3",
  "browser_action": {
    "default_icon": "icon.png"
  },
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
  "permissions": [ "http://*/*", "https://*/*" ]
}
